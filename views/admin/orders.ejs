<%- include("../layouts/header.ejs") %>
<%- include("../layouts/adminnavbar.ejs") %>
<div class="work-space  pt-2 px-3 ps-5">


    <h2 class="text-center mt-2">Manage Orders</h2>

    

    <div class="container bootstrap snippets bootdey mt-3">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        <th><span>Order Id</span></th>
                                        <th><span>Created</span></th>
                                        
                                        <th><span>Bill amount</span></th>
                                        
                                        <th><span>Status</span></th>
                                        <th><span></span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(orders.length > 0){ for(let i=0; i <
                                        orders.length; i++ ){%>
                                    <tr>
                                        <td><%=orders[i]._id %></td>
                                        <td><%=orders[i].
                                            createdAt.toDateString() %></td>
                                       
                                        <td><%=orders[i].amount %></td>
                                        <form action="" method="post">
                                        <td> <select name="status" aria-label="Default select example" style="border: 0;background-color: rgb(245,245,245);"> 
                                            <option><%=orders[i].status %></option>
                                            
                                                <option > In progress</option>
                                                <option >Packed</option> 
                                                <option >Shipped</option> 
                                                <option >Delivered</option> 
                                          </select> </td>

                                        <td>
                                            <!-- Default switch -->
                                       
                                            <input type="hidden" name="orderid" value="<%=orders[i]._id %>">    
                                           <input type="submit" value="Save" class="btn btn-success">

                                        </form>
                                        </td>
                                    </tr>
                                    <%}}else{%>
                                    <tr>
                                        <td>Coupon not found</td>
                                    </tr>
                                    <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<%- include("../layouts/footer.ejs") %>